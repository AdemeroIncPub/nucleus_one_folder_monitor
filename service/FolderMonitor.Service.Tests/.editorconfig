# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = false

[*.cs]
################################################################################
## Analysis Configuration
## Valid severities are: default,none,silent,suggestion,warning,error
################################################################################

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = silent

# IDE0058: Remove unnecessary expression value
# A lot of these due to NSubstitute
dotnet_diagnostic.IDE0058.severity = silent

# RCS1118: Mark local variable as const
dotnet_diagnostic.RCS1118.severity = silent

# RCS1190: Join string expressions
dotnet_diagnostic.RCS1190.severity = silent
